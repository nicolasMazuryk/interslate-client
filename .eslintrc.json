{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "globals": {
    "describe": true,
    "it": true,
    "expect": true,
    "before": true,
    "beforeEach": true,
    "after": true
  },
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "space-in-parens": ["error", "never"],
    "object-curly-spacing": ["error", "never"],
    "padded-blocks": ["error", "never"],
    "func-call-spacing": ["error", "never"],
    "max-len": ["error", { "ignoreStrings": true, "code": 100 }],
    "eol-last": ["error", "always"]
  }
}